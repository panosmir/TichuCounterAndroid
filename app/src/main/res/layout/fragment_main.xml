<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newbiedev.panos.tichucounter.MainFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/finalScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="50dp"
            android:text="Choose your final score"
            android:textSize="24dp" />

        <RadioGroup
            android:id="@+id/scoreRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/finalScoreTextView"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:text="500"
                android:textSize="18dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="120dp"
                android:text="1000"
                android:textSize="18dp" />
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playButton"
            android:text="New Game"
            android:textSize="24dp"
            android:layout_below="@id/finalScoreTextView"
            android:layout_centerVertical="true"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:onClick="newGameButtonClick"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</FrameLayout>
